<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/laydesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent_bg">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:background="@color/transparent_bg"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/productimage"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="center"
                android:src="@color/white_redis"
                android:transitionName="image" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                android:background="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:id="@+id/counttimertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                 "
                    android:padding="6sp"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_light"
                    android:textStyle="bold"
                    android:background="@color/dark_blue"
                    android:textColor="@color/white"
                    android:letterSpacing=".07"
                    android:transitionName="counttimertext"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5sp"
            android:paddingBottom="10sp"
            android:background="@color/transparent_bg">
            <androidx.cardview.widget.CardView
                android:id="@+id/imgcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:background="@color/white_redis"
                app:cardElevation="0dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/userimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@color/white_redis"
                    android:scaleType="center"
                    android:transitionName="userImage"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/l2"
                android:layout_toEndOf="@+id/imgcard"
                android:padding="5sp">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:transitionName="productName" />

                <TextView
                    android:id="@+id/biders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productname"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/white_redis"
                    android:textSize="12sp"
                    android:transitionName="biders" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp">

                <TextView
                    android:id="@+id/pricetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/montserrat_light"
                    android:text=""
                    android:textColor="@color/white_redis"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/bidprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pricetext"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:transitionName="bidprice" />
            </RelativeLayout>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/bidbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:background="@color/dark"
            app:cardElevation="0dp"
            android:transitionName="bidbutton">
            <TextView
                android:id="@+id/buttontxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@color/textColor"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="20sp"
                android:padding="10sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/popupoption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#69010000"
        android:gravity="center"
        android:layout_alignTop="@+id/laydesign"
        android:layout_alignBottom="@+id/laydesign"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            android:id="@+id/editbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:background="@color/dark"
            app:cardElevation="0dp"
            android:layout_alignStart="@+id/deletebutton"
            android:layout_alignEnd="@+id/deletebutton">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="edit"
                android:background="@color/textColor"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="20sp"
                android:padding="10sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/deletebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:background="@color/dark"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_below="@+id/editbutton"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:background="@color/textColor"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="20sp"
                android:padding="10sp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>