<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark"
        android:padding="15sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/imagecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:background="@color/transparent_bg"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/popupproductimage"
                    android:layout_width="120sp"
                    android:layout_height="160sp"
                    android:src="@color/black"
                    android:scaleType="center"
                    android:transitionName="image"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/popupproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_toEndOf="@+id/imagecard"
                android:fontFamily="@font/montserrat_bold"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:transitionName="productName" />

            <TextView
                android:id="@+id/popupproductdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popupproductname"
                android:layout_alignStart="@+id/popupproductname"
                android:layout_marginTop="10sp"
                android:layout_toEndOf="@+id/imagecard"
                android:fontFamily="@font/montserrat"
                android:letterSpacing=".05"
                android:text=""
                android:textColor="@color/white_redis"
                android:textSize="12sp"
                android:maxLines="4"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:background="@color/transparent_bg"
                app:cardElevation="0dp"
                android:layout_toEndOf="@+id/imagecard"
                android:layout_alignBottom="@+id/imagecard"
                android:layout_alignStart="@+id/popupproductdescription"
                android:layout_marginBottom="8sp">
                <ImageView
                    android:id="@+id/popupsellerimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/black"
                    android:scaleType="center"
                    android:transitionName="userImage"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/popupsellername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgcard"
                android:layout_alignBottom="@+id/imgcard"
                android:layout_marginStart="15sp"
                android:layout_toEndOf="@+id/imgcard"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:background="@color/transparent_bg">
            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="5sp"
                android:background="@color/transparent_bg">
                <TextView
                    android:id="@+id/balancetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:letterSpacing=".05"
                    android:text="Account Balance"
                    android:textColor="@color/white_redis"
                    android:textSize="14sp"
                    android:transitionName="bid_warning" />
                <TextView
                    android:id="@+id/dolortxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/balance"
                    android:layout_alignBottom="@id/balance"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:letterSpacing=".03"
                    android:text=" $ "
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:transitionName="bid_warning" />
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/balancetxt"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:letterSpacing=".05"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="19sp"
                    android:transitionName="bid_warning"
                    android:layout_toEndOf="@+id/dolortxt"/>
                <TextView
                    android:id="@+id/timetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:letterSpacing=".05"
                    android:text="Time Remaining"
                    android:textColor="@color/white_redis"
                    android:textSize="14sp"
                    android:transitionName="bid_warning" />

                <TextView
                    android:id="@+id/popupcounttimertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timetxt"
                    android:layout_alignEnd="@id/timetxt"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:letterSpacing=".06"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="19sp"
                    android:transitionName="bid_warning" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay2"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/bgroundforprice">

                <ImageView
                    android:id="@+id/price_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/bg_round"
                    android:padding="5sp"
                    android:src="@drawable/ic_minus" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:letterSpacing=".03"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="17sp"
                        android:transitionName="bid_warning"
                        app:drawableStartCompat="@drawable/ic_token" />

                    <TextView
                        android:id="@+id/popupprice"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:letterSpacing=".05"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="19sp"
                        android:transitionName="bid_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_marginEnd="5sp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:letterSpacing=".03"
                        android:text=" ETH"
                        android:textColor="@color/dark_blue"
                        android:textSize="17sp"
                        android:transitionName="bid_warning" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/price_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/bg_round"
                    android:padding="5sp"
                    android:src="@drawable/ic_plus" />
            </RelativeLayout>

            <TextView
                android:id="@+id/bid_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/white_redis"
                android:textSize="10sp"
                android:transitionName="bid_warning" />
            <androidx.cardview.widget.CardView
                android:id="@+id/popupbidbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                android:background="@color/transparent_bg"
                app:cardElevation="0dp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="15sp"
                android:transitionName="bidbutton"
                android:layout_below="@+id/bid_warning">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:background="@color/pink"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="20sp"
                    android:padding="10sp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Bid History"
                android:textColor="@color/textColor"
                android:textSize="17sp"
                android:transitionName="text1"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/text1"
                android:id="@+id/bidderRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>