<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".Activity.WalletActivity">
    <RelativeLayout
        android:id="@+id/l11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_bg"
            app:layout_collapseMode="pin"
            app:contentInsetStartWithNavigation="0sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="My Wallet"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@+id/l11"
        android:id="@+id/l22"/>
    <RelativeLayout
        android:id="@+id/paymentpopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l22"
        android:visibility="gone">
        <include layout="@layout/popuppaymentmethod"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header"
        android:layout_below="@+id/l22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="15sp"
        android:background="@color/transparent_bg">

        <TextView
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Good Day,"
            android:textColor="@color/white_redis"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/good"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing=".05"
            android:text="Istiak !"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_below="@+id/name"
            android:layout_margin="10sp"
            android:background="@drawable/ic_card">

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/ic_card" />-->

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="35sp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".05"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Current Balance"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_above="@+id/balance"
                android:layout_alignStart="@+id/balance"/>

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing=".05"
                android:text="$ 0"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/topup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_alignStart="@+id/card"
            android:padding="10sp"
            android:src="@drawable/ic_topup" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Top Up"
            android:textColor="@color/dark_light"
            android:textSize="16sp"
            android:layout_below="@+id/topup"
            android:layout_alignStart="@+id/topup"
            android:layout_alignEnd="@+id/topup"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_alignEnd="@+id/card"
            android:padding="10sp"
            android:src="@drawable/ic_withdraw" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Withdraw"
            android:textColor="@color/dark_light"
            android:textSize="16sp"
            android:layout_below="@+id/withdraw"
            android:layout_alignEnd="@+id/withdraw"
            android:gravity="center"
            android:layout_marginEnd="5sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/transparent_bg"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Transactions History"
            android:textColor="@color/textColor"
            android:textSize="19sp" />
    </RelativeLayout>
</RelativeLayout>