<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/dark"
tools:context=".Activity.ProductDetailsActivity">
    <RelativeLayout
        android:id="@+id/l11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_bg"
            app:layout_collapseMode="pin"
            app:contentInsetStartWithNavigation="0sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Place a bid"
            android:textColor="@color/textColor"
            android:textSize="24sp" />
    </RelativeLayout>

    <View
        android:id="@+id/l22"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/l11"
        android:background="@color/black" />
    <RelativeLayout
        android:id="@+id/placebiddingpopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l22"
        android:visibility="gone">
        <include layout="@layout/placebiddingpopup"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/popupbelow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bidbutton"
        android:layout_below="@+id/l22"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l22"
            android:background="@color/transparent_bg"
            android:orientation="vertical"
            android:padding="15sp">

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/layoutappname">-->

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/sliderviewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutappname"/>

                <LinearLayout
                    android:id="@+id/slide_dot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_below="@+id/sliderviewpager"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"/>
<!--            </RelativeLayout>-->

            <TextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:fontFamily="@font/montserrat_bold"
                android:text=" "
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:transitionName="productName" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_bg"
                android:paddingTop="5sp"
                android:paddingBottom="5sp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/imgcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/black"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/sellerimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@color/black"
                        android:transitionName="userImage" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/sellername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:layout_toStartOf="@+id/biders"
                    android:layout_toEndOf="@+id/imgcard"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/biders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:fontFamily="@font/montserrat"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/white_redis"
                    android:textSize="12sp"
                    android:transitionName="biders" />
            </RelativeLayout>

            <TextView
                android:id="@+id/productdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:letterSpacing=".05"
                android:padding="5sp"
                android:text=" "
                android:textColor="@color/white_redis"
                android:textSize="12sp"
                android:maxLines="5"/>

            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/pricetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text=""
                    android:textColor="@color/white_redis"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bidprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pricetext"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:transitionName="bidprice" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Time remaining"
                    android:textColor="@color/white_redis"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/counttimertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_alignEnd="@+id/text2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:letterSpacing=".07"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:transitionName="counttimertext" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bidbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        android:background="@color/pink"
        app:cardElevation="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="10sp"
        android:transitionName="bidbutton"
        android:visibility="gone">
        <TextView
            android:id="@id/buttontxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Bid"
            android:background="@color/pink"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20sp"
            android:padding="10sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white_redis"
        app:cardCornerRadius="10sp"
        app:cardElevation="0dp">

        <TextView
            android:id="@id/buttontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent_bg"
            android:drawableStart="@drawable/ic_cart"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="10sp"
            android:text="  Add to Cart"
            android:textColor="@color/pink"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>