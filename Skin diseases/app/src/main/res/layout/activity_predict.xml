<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_redis"
    tools:context=".PredictActivity">
    <LinearLayout
        android:id="@+id/imglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">
        <ImageView
            android:id="@+id/predictimg"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.35"
            android:scaleType="centerCrop"
            android:contentDescription="@string/blank"/>

        <RelativeLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.82"
            android:layout_marginTop="-45sp"
            android:background="@drawable/transparentbg"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <LinearLayout
                android:id="@+id/layout_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="-5sp"
                android:layout_below="@+id/line">

                <TextView
                    android:id="@+id/predictResult"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="15sp"
                    android:paddingTop="5sp"
                    android:text="Skin Disease"
                    android:textColor="@color/dark_blue"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/predictResultPercent"
                    android:layout_width="0sp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:text="78.3%"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/pink"
                    android:visibility="gone"
                    android:layout_below="@+id/predictResult"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:layout_below="@id/layout_result">

                <TextView
                    android:id="@+id/disease_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="true"
                    android:paddingStart="10sp"
                    android:paddingEnd="15sp"
                    android:text=""
                    android:textColor="@color/des"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:justificationMode="inter_word"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp">
                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/confidence"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="22sp"
                        android:paddingStart="10sp"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:id="@+id/percent"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="24sp"
                        android:gravity="end"
                        android:paddingEnd="10sp"
                        android:fontFamily="@font/eczar_medium"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/confidence1"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="22sp"
                        android:paddingStart="10sp"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:id="@+id/percent1"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="24sp"
                        android:gravity="end"
                        android:paddingEnd="10sp"
                        android:fontFamily="@font/eczar_medium"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/confidence2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="10sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/percent2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/eczar_medium"
                        android:gravity="end"
                        android:paddingEnd="10sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="24sp" />
                </LinearLayout>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:padding="25sp"
                android:visibility="gone"
                android:gravity="center">
                <TextView
                    android:id="@+id/save"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eczar_medium"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textColor="@color/dark_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:contentInsetStartWithNavigation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
</RelativeLayout>