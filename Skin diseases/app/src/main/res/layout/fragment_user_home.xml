<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_redis">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detection"
                android:fontFamily="@font/poppins"
                android:textSize="18dp"
                android:textColor="@color/dark"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:id="@+id/takeimgcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/prediction_card"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <TextView
                android:id="@+id/detect_his"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detections History"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_redis">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detectRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>