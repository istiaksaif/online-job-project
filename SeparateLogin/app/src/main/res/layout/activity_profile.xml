<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/l1">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_collapseMode="pin"
            app:contentInsetStartWithNavigation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Profile"
                android:textColor="@color/dark_blue"
                android:textSize="24dp" />
        </androidx.appcompat.widget.Toolbar>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_shadow"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0sp"
        android:layout_below="@+id/l1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white_redis"
                        app:cardCornerRadius="60dp"
                        android:elevation="5dp"
                        app:cardElevation="4dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="25sp">
                        <ImageView
                            android:id="@+id/profileimage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_logo"
                            android:contentDescription="@string/blank"/>

                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/verifyimage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/blank"
                        android:scaleType="fitXY"
                        android:src="@drawable/approved"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10sp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_name"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:includeFontPadding="false"
                    android:text="@string/app_name"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-150dp"
                    android:background="@drawable/highlight_round_btn"
                    android:includeFontPadding="false"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="Company Details"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/plan_normal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Company Name"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/textDesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Designation"
                        android:textColor="@color/dark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textDivision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Division"
                        android:textColor="@color/dark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Mobile Number"
                        android:textColor="@color/dark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textHeadQuarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Head Quarter"
                        android:textColor="@color/dark"
                        android:textSize="15sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>